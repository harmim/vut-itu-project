<div class="row">
	<div n:inner-foreach="$flashes as $flash" class="col-lg-6 offset-lg-3">
		<div n:class="$flash->type ? 'alert-'.$flash->type, alert, alert-dismissible, fade, show" role="alert">
			{$flash->message}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</div>
</div>
